{
	"manifest_version": 2,
	"name": "Modation",
	"version": "0.5.2",

	"description": "Soundation, amplified.",
	"icons": { "16": "img/icon16.png",
		"19": "img/icon19.png",
		"48": "img/icon48.png",
		"128": "img/icon128.png" },

	"author": "cyberbit",
	"permissions": [
		"http://soundation.com/*",
		"alarms",
		"notifications",
		"storage"
	],

	"background": {
		"page": "background.html",
		"persistent": false
	},

	"browser_action": {
		"default_icon": "img/icon19.png",
		"default_popup": "popup.html"
	},
	
	"content_scripts": [{
		"matches": ["http://soundation.com/*"],
		"js": ["js/jquery.all.js", "js/content.js"]
	}],
	
	"options_page": "options.html",

	"short_name": "Modation"
}
